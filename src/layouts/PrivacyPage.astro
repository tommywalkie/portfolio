---
import Layout from './Layout.astro';
import Header from '../components/Header.astro';
import Footer from '../components/Footer.astro';
import { ArrowLeftIcon } from 'lucide-react';
import translations from '../i18n/privacy.json';

interface Props {
  lang?: string;
}

const { lang = 'en' } = Astro.props;
const t = translations[lang];
---

<Layout>
  <div class="min-h-screen flex flex-col w-full">
    <Header lang={lang} />
    <main class="max-w-3xl mx-auto px-4 py-8 text-left text-primary-900 dark:text-primary-100">
      <div>
        <a
          href={`/${lang}`}
          class="text-primary-600 dark:text-primary-300 flex items-center gap-2 mb-5 bg-primary-50 dark:bg-primary-900 px-4 py-2 rounded-md hover:bg-primary-100 dark:hover:bg-primary-800 w-fit"
        >
          <ArrowLeftIcon className="w-4 h-4" />
          {t.backToHome}
        </a>
      </div>

      <h1 class="text-2xl font-bold mb-6 mt-4">{t.title}</h1>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">{t.sections.overview.title}</h2>
        <p class="mb-4">
          {t.sections.overview.content}{' '}
          <a href="https://tommywalkie.com" class="text-primary-600 dark:text-primary-300 hover:underline">
            tommywalkie.com
          </a>
          .
        </p>
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">{t.sections.analytics.title}</h2>
        <p class="mb-4">
          {t.sections.analytics.content}{' '}
          <a
            href="https://liwan.tommywalkie.com/p/portfolio"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-600 dark:text-primary-300 hover:underline"
          >
            liwan.tommywalkie.com/p/portfolio
          </a>
          .
        </p>
        <h3 class="text-lg font-semibold mb-2">{t.sections.analytics.whatWeCollect.title}</h3>
        <ul class="list-disc pl-6 mb-4">
          {t.sections.analytics.whatWeCollect.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
        <h3 class="text-lg font-semibold mb-2">{t.sections.analytics.whatWeDontCollect.title}</h3>
        <ul class="list-disc pl-6 mb-4">
          {t.sections.analytics.whatWeDontCollect.items.map((item) => (
            <li>{item}</li>
          ))}
        </ul>
      </section>

      <section class="mb-8">
        <h2 class="text-xl font-semibold mb-4">{t.sections.contact.title}</h2>
        <p>
          {t.sections.contact.content}{' '}
          <a
            href="https://github.com/tommywalkie"
            target="_blank"
            rel="noopener noreferrer"
            class="text-primary-600 dark:text-primary-300 hover:underline"
          >
            GitHub
          </a>
          .
        </p>
      </section>
    </main>
    <Footer />
  </div>
</Layout>

<style>
  .prose {
    max-width: none;
  }
  .prose a {
    color: var(--tw-prose-links);
    text-decoration: underline;
  }
</style> 